{
  "name": "Triton-ROCm",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      // root (not recommended)
      "USERNAME": "${localEnv:USER}",
      "USER_UID": "${localEnv:USER_UID}",
      "USER_GID": "${localEnv:USER_GID}",
      "HIP_VISIBLE_DEVICES": "${localEnv:HIP_VISIBLE_DEVICES}",
      // Uncomment CUSTOM_LLVM to enable specific LLVM build
      //"CUSTOM_LLVM": "true"
    }
  },
  "remoteUser": "${localEnv:USER}",
  "containerUser": "${localEnv:USER}",
  // Add the IDs of extensions you want installed when the container is created.
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.debugpy",
        "ms-python.flake8",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cpptools-themes",
        "twxs.cmake"
      ]
    }
  },
  "postStartCommand": "${containerWorkspaceFolder}/.devcontainer/triton-amd/postStartCommand.sh",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached,Z",
  "workspaceFolder": "/workspace",
  "hostRequirements": {
    "cpus": 8
  },
  "runArgs": [
    "--device=/dev/kfd",
    "--device=/dev/dri",
    "--security-opt",
    "seccomp=unconfined",
    "--security-opt=label=disable",
    "--group-add=video",
    "--cap-add=SYS_PTRACE",
    "--ipc=host",
    "--userns=keep-id:uid=1000,gid=1000"
  ],
  "updateRemoteUserUID": true
}
